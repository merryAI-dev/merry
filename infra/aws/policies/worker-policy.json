{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ReadWriteAndDelete",
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
      "Resource": [
        "arn:aws:s3:::merry-private-apne2/uploads/*",
        "arn:aws:s3:::merry-private-apne2/artifacts/*"
      ]
    },
    {
      "Sid": "DynamoDbReadUpdate",
      "Effect": "Allow",
      "Action": ["dynamodb:GetItem", "dynamodb:UpdateItem"],
      "Resource": "arn:aws:dynamodb:ap-northeast-2:*:table/merry-main"
    },
    {
      "Sid": "SqsConsume",
      "Effect": "Allow",
      "Action": [
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:ChangeMessageVisibility",
        "sqs:GetQueueAttributes"
      ],
      "Resource": "arn:aws:sqs:ap-northeast-2:*:merry-analysis-jobs"
    },
    {
      "Sid": "BedrockInvoke",
      "Effect": "Allow",
      "Action": ["bedrock:InvokeModel"],
      "Resource": "*"
    }
  ]
}

